{
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.encoding": "utf8",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "search.exclude": {
    "public/**": true,
    "node_modules/**": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll": true
  },
  "cSpell.words": ["algolia", "fira", "frontmatter", "okaidia", "prismjs"],
  "eslint.workingDirectories": [
    {"directory": "packages/usehooks.ts", "changeProcessCWD": true },
    {"directory": "packages/frontend", "changeProcessCWD": true }
  ]
}
