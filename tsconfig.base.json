{
  "compilerOptions": {
    "module": "commonjs",
    // "composite": true,
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "isolatedModules": true,
    "lib": ["ESNEXT", "DOM"]
  },

  "exclude": ["node_modules", "dist", "lib", "esm"]
}
