{
  "name": "usehooks.ts",
  "private": true,
  "description": "React hook library, ready to use, written in Typescript.",
  "version": "0.1.0",
  "author": "Julien CARON <juliencaron@protonmail.com>",
  "keywords": [
    "gatsby",
    "typescript",
    "react",
    "npm",
    "lerna"
  ],
  "license": "MIT",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean && lerna clean -y",
    "bootstrap": "lerna exec npm install && npm run copy-hooks",
    "reset": "npm run clean && npm run bootstrap",
    "types-check": "lerna run tsc",
    "lint": "lerna run lint",
    "lint-fix": "lerna run lint-fix",
    "format": "lerna run format",
    "test": "lerna run test",
    "build": "lerna run build",
    "start-frontend": "cd packages/frontend && npm run start",
    "build-frontend": "lerna run --scope frontend build",
    "start-usehooks": "cd packages/usehooks.ts && npm run test:watch",
    "publish": "lerna run publish",
    "update-readme": "node ./scripts/updateReadme.js",
    "copy-hooks": "rimraf -rf ./packages/frontend/generated && node ./scripts/copyHooks.js"
  },
  "devDependencies": {
    "chalk": "^4.1.2",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/juliencrn/usehooks.ts"
  },
  "bugs": {
    "url": "https://github.com/juliencrn/usehooks.ts/issues"
  }
}
