{
  "name": "usehooks.ts",
  "private": true,
  "description": "React hook library, ready to use, written in Typescript.",
  "version": "0.1.0",
  "author": "Julien CARON <juliencaron@protonmail.com>",
  "keywords": [
    "gatsby",
    "typescript",
    "react",
    "npm",
    "lerna"
  ],
  "license": "MIT",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "clean": "lerna clean",
    "bootstrap": "lerna exec npm install",
    "tsc": "lerna run tsc",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "build-frontend": "lerna run --scope frontend build",
    "publish-package": "lerna run --scope usehooks.ts publish",
    "update-readme": "node ./scripts/updateReadme.js",
    "copy-hooks": "rm -rf ./packages/frontend/generated && node ./scripts/copyHooks.js"
  },
  "devDependencies": {
    "@types/node": "^16.9.1",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "chalk": "^4.1.2",
    "lerna": "^4.0.0",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/juliencrn/usehooks.ts"
  },
  "bugs": {
    "url": "https://github.com/juliencrn/usehooks.ts/issues"
  }
}
