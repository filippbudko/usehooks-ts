{
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "extends": [
    "@junscuzzy/eslint-config"
  ],
  "overrides": [
    {
      "extends": ["plugin:jest/recommended"],
      "files": ["**/*.test.ts"],
      "plugins": ["jest"],
      "env": {
        "jest": true
      },
      "rules": {
        // you should turn the original rule off *only* for test files
        "@typescript-eslint/unbound-method": "off",
        "jest/unbound-method": "error"
      }
    }
  ]
}

