{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "baseUrl": ".",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "paths": {
      "~/*": ["src/*"]
    },
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
